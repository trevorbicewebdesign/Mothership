<?xml version="1.0" encoding="UTF-8"?>
<form>
	<fields name="filter">
		<field name="search" type="text" inputmode="search" label="COM_MOTHERSHIP_CLIENTS_FILTER_SEARCH_LABEL" description="COM_MOTHERSHIP_CLIENTS_FILTER_SEARCH_DESC" hint="JSEARCH_FILTER" />

		<field name="state" type="status" label="JSTATUS" class="js-select-submit-on-change">
			<option value="">JOPTION_SELECT_PUBLISHED</option>
		</field>

		<field name="purchase_type" type="list" label="COM_MOTHERSHIP_HEADING_TYPE" default="0" class="js-select-submit-on-change" validate="options">
			<option value="">COM_MOTHERSHIP_SELECT_TYPE</option>
			<option value="1">COM_MOTHERSHIP_FIELD_VALUE_UNLIMITED</option>
			<option value="2">COM_MOTHERSHIP_FIELD_VALUE_YEARLY</option>
			<option value="3">COM_MOTHERSHIP_FIELD_VALUE_MONTHLY</option>
			<option value="4">COM_MOTHERSHIP_FIELD_VALUE_WEEKLY</option>
			<option value="5">COM_MOTHERSHIP_FIELD_VALUE_DAILY</option>
		</field>
	</fields>
	<fields name="list">
		<field name="fullordering" type="list" label="JGLOBAL_SORT_BY" statuses="*,0,1,2,-2" class="js-select-submit-on-change" default="a.name ASC" validate="options">
			<option value="">JGLOBAL_SORT_BY</option>
			<option value="a.name ASC">COM_MOTHERSHIP_HEADING_CLIENT_ASC</option>
			<option value="a.name DESC">COM_MOTHERSHIP_HEADING_CLIENT_DESC</option>
		</field>

		<field name="limit" type="limitbox" label="JGLOBAL_LIST_LIMIT" default="25" class="js-select-submit-on-change" />
	</fields>
</form>
