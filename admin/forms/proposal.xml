<?xml version="1.0" encoding="UTF-8"?>
<form addfieldprefix="TrevorBice\Component\Mothership\Administrator\Field">
	<fieldset name="details">
		<field name="id" type="text" default="0" readonly="true" class="readonly" label="JGLOBAL_FIELD_ID_LABEL" description="JGLOBAL_FIELD_ID_DESC" />
		<field name="client_id" type="clientlist" required="required" default="" readonly="" class="" label="COM_MOTHERSHIP_FIELD_CLIENT_ID_LABEL" description="COM_MOTHERSHIP_FIELD_CLIENT_NAME_DESC" />
		<field name="account_id" type="accountlist" required="required" default="" readonly="" class="" label="COM_MOTHERSHIP_FIELD_ACCOUNT_ID_LABEL" description="COM_MOTHERSHIP_FIELD_ACCOUNT_NAME_DESC" />
		<field name="project_id" type="projectlist" required="required" default="" readonly="" class="" label="COM_MOTHERSHIP_FIELD_PROJECT_ID_LABEL" description="COM_MOTHERSHIP_FIELD_PROJECT_NAME_DESC" />
		<field name="type" type="type" default="hourly" readonly="" class="" label="COM_MOTHERSHIP_FIELD_PROPOSAL_TYPE_LABEL" description="COM_MOTHERSHIP_FIELD_PROPOSAL_TYPE_DESC" />
		<field name="number" type="text" default="" required="required" readonly="" class="input-xxlarge input-large-text" label="COM_MOTHERSHIP_FIELD_PROPOSAL_NUMBER_LABEL" description="COM_MOTHERSHIP_FIELD_PROPOSAL_NUMBER_DESC" />
		<field name="total_low" type="text" default="" required="required" readonly="" class="input-xxlarge input-large-text" label="COM_MOTHERSHIP_FIELD_PROPOSAL_TOTAL_LOW_LABEL" description="COM_MOTHERSHIP_FIELD_PROPOSAL_TOTAL_LOW_DESC" />
		<field name="total" type="text" default="" required="required" readonly="" class="input-xxlarge input-large-text" label="COM_MOTHERSHIP_FIELD_PROPOSAL_TOTAL_LABEL" description="COM_MOTHERSHIP_FIELD_PROPOSAL_TOTAL_DESC" />
		<field name="rate" type="text" default="" required="required" readonly="" class="input-xxlarge input-large-text" label="COM_MOTHERSHIP_FIELD_PROPOSAL_RATE_LABEL" description="COM_MOTHERSHIP_FIELD_PROPOSAL_RATE_DESC" />
		<field name="status" type="proposalstatus" default="1" readonly="" class="" label="COM_MOTHERSHIP_FIELD_PROPOSAL_STATUS_LABEL" description="COM_MOTHERSHIP_FIELD_PROPOSAL_STATUS_DESC" />
		<field name="created" type="calendar" readonly="false" class="validate-date" label="COM_MOTHERSHIP_FIELD_PROPOSAL_CREATED_LABEL" description="COM_MOTHERSHIP_FIELD_PROPOSAL_CREATED_DESC" default="" format="%Y-%m-%d" filter="user_utc" />
		<field name="summary" type="editor" label="COM_MOTHERSHIP_FIELD_PROPOSAL_SUMMARY_LABEL" description="COM_MOTHERSHIP_FIELD_PROPOSAL_SUMMARY_DESC" rows="5" cols="50" />
		<field name="items" type="proposalitems"  required="required"
			formsource="/administrator/components/com_mothership/forms/proposal_items.xml"
			label="COM_MOTHERSHIP_PROPOSAL_ITEMS"
			description="COM_MOTHERSHIP_PROPOSAL_ITEMS_DESC"
			multiple="true"
			buttons="add"
			sortable="true"
		/>
		<field name="notes" type="editor" label="COM_MOTHERSHIP_FIELD_PROPOSAL_NOTES_LABEL" description="COM_MOTHERSHIP_FIELD_PROPOSAL_NOTES_DESC" rows="5" cols="50" />
	</fieldset>
</form>