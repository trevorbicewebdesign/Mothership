<?xml version="1.0" encoding="utf-8"?>
<form>
    <fields name="items">
		<field name="name" type="text" label="Item Name" readonly="false" />
        <field name="description" type="text" label="Description" size="40" required="true" />
        <field name="quantity" type="number" label="Quantity" step="0.01" required="true" />
        <field name="rate" type="number" label="Rate" step="0.01" required="true" />
        <field name="total" type="number" label="Total" step="0.01" readonly="true" />
    </fields>
</form>